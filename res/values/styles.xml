    </style>
    
     <style name="AppActionBarTheme" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <!--  item name="android:windowFullscreen">true</item-->
    </style>
    <style name="AppActionBarTheme.MainActivityActionBar">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar.MainActivity</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.MainActivity</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:actionMenuTextAppearance">@style/MainActivityTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/MainActivityTextAppearance</item>
        <item name="android:actionMenuTextColor">@color/main_color</item>
        <item name="actionMenuTextColor">@color/main_color</item>
    </style>
    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="actionButtonStyle">@style/Widget.Sherlock.ActionButton</item>
        <item name="android:actionButtonStyle">@style/Widget.Sherlock.ActionButton</item>
    </style>
    <style name="Widget.Styled.ActionBar.MainActivity">
        <item name="background">@color/wt</item>
        <item name="android:background">@color/wt</item>
         <item name="displayOptions">homeAsUp</item>
         <item name="android:displayOptions">none</item>
    </style>
    
    <style name="MainActivityTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
