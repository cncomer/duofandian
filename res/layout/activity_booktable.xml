<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/top_bottom" >

        <Button
            android:id="@+id/Button_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_book_table"
            android:textColor="@color/main_color"
            android:textSize="20dip" />

        <Button
            android:id="@+id/button_more"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_more_selector" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/button_more"
            android:background="@drawable/button_home" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_shoptable"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_below="@+id/top" >

        <ImageView
            android:id="@+id/imageView_table_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="matrix" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dip"
            android:layout_height="30dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="29dp"
            android:background="@drawable/tag_vip" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/layout_shoptable" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/boder"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_book_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="抢位告知"
                    android:textColor="@color/Black"
                    android:textSize="18dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip" >

                    <ImageView
                        android:id="@+id/imageView_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dip"
                        android:background="@drawable/img_clock" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="会员专座免除排队等候时间,抢到即可前往就餐"
                        android:textColor="@color/textColor"
                        android:textSize="13dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip" >

                    <ImageView
                        android:id="@+id/imageView_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dip"
                        android:background="@drawable/img_message" />

                    <TextView
                        android:id="@+id/textView_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="会员到店时,可能需稍等片刻,待餐厅内有空桌时,服务员会优先带您入座。"
                        android:textColor="@color/textColor"
                        android:textSize="13dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_choose_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/boder" >

                    <ImageButton
                        android:id="@+id/button_select_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/btn_choose_date"
                        android:text="@string/btn_select_time" />

                    <TextView
                        android:id="@+id/textView_selected_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/selected_time_info"
                        android:textColor="@color/main_color"
                        android:layout_marginLeft="10dip"
                        android:textSize="18dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_choose_seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/boder" >

                    <ImageButton
                        android:id="@+id/button_select_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/btn_choose_seat" />

                    <TextView
                        android:id="@+id/textView_selected_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:text="@string/selected_table_info"
                        android:textColor="@color/main_color"
                        android:textSize="18dip" />
                </LinearLayout>

                <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    
                    android:layout_marginBottom="10dip" >

                    <ImageButton
                        android:id="@+id/button_select_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_choose_number" />

                    <TextView
                        android:id="@+id/textView_selected_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_person_number"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
                -->

                <EditText
                    android:id="@+id/editText_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:text="@string/note_content"
                    android:textColor="@color/textColor_gray"
                    android:background="@drawable/edit_content_bg"
                    android:ems="10" />

            </LinearLayout>
            <!--
        <Button
        android:id="@+id/button_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        
        android:text="@string/btn_commit_booktable" />
            -->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dip"
        android:background="@color/White" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/top_bottom"
            android:orientation="horizontal" >

            <!--
         <ImageButton
             android:id="@+id/imageButton_home"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/home_blue"
             
             android:layout_weight="1"
             android:layout_gravity="center_vertical"
             android:background="@color/White" />

         <ImageButton
             android:id="@+id/imageButton_eat"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/eat_gray"
             android:layout_weight="1"
             android:layout_gravity="center_vertical"
             android:background="@color/White" />

         <ImageButton
             android:id="@+id/imageButton_my"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/my_gray"
             android:layout_weight="1"
             android:layout_gravity="center_vertical"
             android:background="@color/White" />
            -->

            <Button
                android:id="@+id/button_commit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="20px"
                android:layout_marginRight="5dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="@string/btn_commit_booktable"
                android:textColor="@color/text_selector"
                android:textSize="15dip" />

            <Button
                android:id="@+id/imageButton_pickfood"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="20px"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="@string/btn_pick_food_str"
                android:textColor="@color/text_selector"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>