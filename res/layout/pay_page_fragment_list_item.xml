<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:gravity="center"
    android:orientation="horizontal" >

    <RelativeLayout 
        android:layout_width="0dip"
        android:layout_weight="0.4"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="望湘园"
            android:layout_marginLeft="10dip"
            android:textSize="18sp"
            android:textColor="@color/blk"/>
        <TextView android:id="@+id/money_title"
            android:layout_below="@+id/name"
            android:layout_marginTop="6dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/title_money"
             android:layout_marginLeft="10dip"
            android:textColor="@color/blk"/>
        
        <TextView android:id="@+id/money"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/money_title"
            android:layout_alignBaseline="@+id/money_title"
            android:layout_marginTop="6dip"
            android:layout_marginLeft="6dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="120.0"
            android:textSize="18sp"
            android:textColor="#ffff0000"/>
    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_marginLeft="4dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_weight="0.6"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/bill_number"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="订单号: dsadasdsadsadsads"
            android:textColor="@color/blk"/>
        <TextView android:id="@+id/date"
            android:layout_marginTop="6dip"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="消费时间: dsadsadsadsadsad"
            android:textColor="@color/blk"/>
    </LinearLayout>

</LinearLayout>