                    android:id="@+id/textView_title_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="手机号码"
                    android:textColor="@color/textColor_gray"
                    android:textSize="13dip" />

