<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/top_bottom" >

        <Button
            android:id="@+id/button_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_regist"
            android:textColor="@color/main_color"
            android:textSize="20dip" />

        <Button
            android:id="@+id/button_more"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_more_selector" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/button_more"
            android:background="@drawable/button_home" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/main_color"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/imageButton_home"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_home" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户注册"
            android:textColor="@color/White"
            android:textSize="20dip" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/btn_back_string" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_user" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:text="用户名:请输入手机号"
                    android:textColor="@color/small_textColor"
                    android:singleLine="true"
                    android:textSize="15dip"
                    android:inputType="number" >
                </EditText>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dip"
                   
                    android:text="必填" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom" >

                <ImageView
                    android:id="@+id/imageView_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_sms" />

                <EditText
                    android:id="@+id/editText_checkSMS"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:singleLine="true"
                     />

                <Button
                    android:id="@+id/button_getSMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:text="获取验证码"
                    android:textColor="@color/text_selector"
                    android:textSize="18dip"
                    android:padding="5dip"
                    android:layout_gravity="center_vertical" 
                    android:layout_marginRight="20dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_sms" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editText_niname"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:ems="10"
                    android:text="nicheng" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dip"
                    android:text="必填" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_pwd" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editText_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:ems="10"
                    android:inputType="text"
                    android:text="请输入密码"
                    android:textColor="@color/textColor_gray"
                    android:singleLine="true"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dip"
                    android:text="必填" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_pwd"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editText_pwd_confirm"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:ems="10"
                    android:inputType="text"
                    android:text="请重复密码"
                    android:textColor="@color/textColor_gray"
                    android:singleLine="true"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dip"
                    android:text="必填" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="ceshi@cheshi.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/button_regist"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/button_commit"
                    android:text="@string/btn_regist"
                    android:textColor="@color/text_btn_commit_selector"
                    android:textSize="15dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>