<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/White" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_bottom" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_sms" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="用户名:"
                android:textColorHint="@color/textColor_gray" />

            <EditText
                android:id="@+id/editText_name"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/White"
                android:hint="请输入手机号"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/small_textColor"
                android:textColorHint="@color/textColor_gray"
                android:textSize="15dip" >
            </EditText>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:text="必填" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_bottom" >

            <ImageView
                android:id="@+id/imageView_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_yanzhengcode" />

            <EditText
                android:id="@+id/editText_checkSMS"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@color/White"
                android:hint="@string/input_yanzhengcode"
                android:singleLine="true"
                android:textColorHint="@color/textColor_gray" />

            <Button
                android:id="@+id/button_getSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:background="@drawable/button_commit"
                android:padding="5dip"
                android:text="@string/get_yanzhengcode"
                android:textColor="@color/text_btn_commit_selector"
                android:textSize="18dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_bottom" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_email" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="邮箱:" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/White"
                android:ems="10" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:text="必填" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_bottom" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="昵称:" />

            <EditText
                android:id="@+id/editText_niname"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/White"
                android:ems="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:text="必填" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_bottom" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_pwd" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="密码:" />

            <EditText
                android:id="@+id/editText_pwd"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/White"
                android:ems="10"
                android:hint="6-14位"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/textColor_gray"
                android:textColorHint="@color/textColor_gray"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:text="必填" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_bottom" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_pwd"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="重复密码:" />

            <EditText
                android:id="@+id/editText_pwd_confirm"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/White"
                android:ems="10"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/textColor_gray"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:text="必填" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/button_regist"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/button_commit"
                android:text="@string/btn_regist"
                android:textColor="@color/text_btn_commit_selector"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>