<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/top_bottom" >

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="上海"
            android:textColor="@color/main_color"
            android:textSize="20dip" />

        <Button
            android:id="@+id/button_more"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_more_selector"
            android:layout_marginRight="5dip"
             />

        <Button
            android:id="@+id/button_home"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_more"
            android:background="@drawable/button_home"
            android:layout_marginRight="5dip"
             />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top" 
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/boder_bottom">

        <ImageButton
            android:id="@+id/imageButton_search"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/button_search" />

        <EditText
            android:id="@+id/editText_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginLeft="10dip" 
            android:background="@drawable/boder_bottom_maincolor">

          
        </EditText>

        <Button
            android:id="@+id/button_sort"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:background="@drawable/buttons"
            android:text="筛选"
            android:textColor="@color/text_selector"
            android:textSize="15dip"
            android:layout_marginRight="10dip"
            android:layout_gravity="center_vertical" 
            android:layout_marginLeft="20dip"/>
    </LinearLayout>

    <!-- We have to indicate that the listview is now a PullAndLoadListView -->
    <com.costum.android.widget.PullAndLoadListView
        android:id="@+id/listView_all_store"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/search"/>
  

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_bottom"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/imageButton_position"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/btn_location" />

        <TextView
            android:id="@+id/textView_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@+id/imageButton_refrash"
            android:layout_toRightOf="@+id/imageButton_position"
            android:text="上海市闸北区共和新路" />

        <ImageButton
            android:id="@+id/imageButton_refrash"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_refrash" />
    </RelativeLayout>

</RelativeLayout>