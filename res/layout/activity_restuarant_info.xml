        <Button  
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_shop_info"
            android:textColor="@color/main_color"
            android:background="@drawable/spinner_back"
            android:textSize="18dip"
            /> 

        <Button
            android:id="@+id/button_more"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_more_selector" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/button_more"
            android:background="@drawable/button_home" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shop_img"
                    android:orientation="vertical"
                    android:background="#eeeeee" >

                    <ImageView
                        android:id="@+id/imageView_shop_img"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/shop_img" />
                </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:orientation="horizontal" >
	                <TextView
	                    android:id="@+id/textView_storename"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dip"
	                    android:layout_marginLeft="30dip"
	                    android:text="商店名"
	                    android:textColor="@color/textColor"
	                    android:textSize="22dip"
	                    android:textStyle="bold" />
	                
		            <LinearLayout
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_marginTop="15dip"
		                android:orientation="horizontal" >
		            <ImageView
		                android:id="@+id/imageView_hui"
		                android:layout_width="18dip"
		                android:layout_height="18dip"
		                android:layout_marginLeft="5dip"
		                android:background="@drawable/icon_hui"
		                android:visibility="gone"/>
		            <ImageView
		                android:id="@+id/imageView_tuan"
		                android:layout_width="18dip"
		                android:layout_height="18dip"
		                android:layout_marginLeft="5dip"
		                android:background="@drawable/icon_tuan"
                        android:visibility="gone" />
		                
		            <ImageView
		                android:id="@+id/imageView_dian"
		                android:layout_width="18dip"
		                android:layout_height="18dip"
		                android:layout_marginLeft="5dip"
		                android:background="@drawable/icon_dian"
                        android:visibility="gone" />
		            <ImageView
		                android:id="@+id/imageView_mai"
		                android:layout_width="18dip"
		                android:layout_height="18dip"
		                android:layout_marginLeft="5dip"
		                android:background="@drawable/icon_mai"
                        android:visibility="gone"/>
	                <TextView
	                    android:id="@+id/textView_score1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/score1"
	                    android:textColor="@color/textColor"
	                    android:textSize="15dip"
	                    android:visibility="gone" />
	
	                <TextView
	                    android:id="@+id/textView_score2"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dip"
	                    android:text="@string/score2"
	                    android:textColor="@color/textColor"
	                    android:textSize="15dip"
	                    android:visibility="gone" />
	
	                <TextView
	                    android:id="@+id/textView_score3"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dip"
	                    android:text="@string/score3"
	                    android:textColor="@color/textColor"
	                    android:textSize="15dip"
	                    android:visibility="gone" />
	
	                <ImageView
	                    android:id="@+id/imageView_star1"
	                    android:layout_width="15dip"
	                    android:layout_height="15dip"
	                    android:layout_marginLeft="2dip"
	                    android:src="@drawable/img_star"
	                    android:visibility="invisible" />
	
	                <ImageView
	                    android:id="@+id/imageView_star2"
	                    android:layout_width="15dip"
	                    android:layout_height="15dip"
	                    android:layout_marginLeft="2dip"
	                    android:src="@drawable/img_star"
	                    android:visibility="invisible" />
	
	                <ImageView
	                    android:id="@+id/imageView_star3"
	                    android:layout_width="15dip"
	                    android:layout_height="15dip"
	                    android:layout_marginLeft="2dip"
	                    android:src="@drawable/img_star"
	                    android:visibility="invisible" />
	
	                <ImageView
	                    android:id="@+id/imageView_star4"
	                    android:layout_width="15dip"
	                    android:layout_height="15dip"
	                    android:layout_marginLeft="2dip"
	                    android:src="@drawable/img_star"
	                    android:visibility="invisible" />
	
	                <ImageView
	                    android:id="@+id/imageView_star5"
	                    android:layout_width="15dip"
	                    android:layout_height="15dip"
	                    android:layout_marginLeft="2dip"
	                    android:src="@drawable/img_star"
	                    android:visibility="invisible" />
	
	                <TextView
	                    android:id="@+id/textView_price"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="人均:"
	                    android:textColor="@color/textColor"
	                    android:textSize="15dip"
	                    android:visibility="gone" />
	            </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                
                android:background="@color/main_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom" >

                <!-- <ImageView
                    android:id="@+id/imageView_location"
                    android:layout_width="20dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/img_location" /> -->
				<TextView
                    android:id="@+id/imageView_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:text="地址:"
                    android:textSize="18dip"
                    android:textColor="@color/textColor"
                    />
                <TextView
                    android:id="@+id/textView_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="地址"
                    android:textColor="@color/textColor"
                    android:textSize="15dip" />

                <ImageView
                    android:id="@+id/imageView_right"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginRight="20dip"
                    android:src="@drawable/btn_right"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom" >

                <!-- <ImageView
                    android:id="@+id/imageView_phone"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/img_phone" /> -->
                    
                    <TextView
                    android:id="@+id/imageView_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:text="电话:"
                    android:textSize="18dip"
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/textView_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="联系电话"
                    android:textColor="@color/textColor"
                    android:textSize="15dip" />

                <ImageView
                    android:id="@+id/imageView_right2"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginRight="20dip"
                    android:src="@drawable/btn_right" 
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="10dip"
                    android:text="餐厅介绍"
                    android:textColor="@color/textColor"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/textView_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="5dip"
                    android:text="@string/no_data"
                    android:textColor="@color/small_textColor"
                    android:textSize="15dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dip"
        android:background="@color/White" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/top_bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_choose_table"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="20px"
                android:layout_marginRight="5dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="马上预定"
                android:textColor="@color/text_selector"
                android:textSize="15dip" />

            <Button
                android:id="@+id/imageButton_pickfood"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="20px"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="先看菜单"
                android:textColor="@color/text_selector"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>