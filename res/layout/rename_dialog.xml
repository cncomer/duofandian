<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wt"
    android:orientation="vertical" >
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="@string/member_info_modify_name"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="300dip"
        android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="10dip"
        android:padding="10dip"
        android:hint="@string/hint_member_info_modify_name"
        android:background="@drawable/modify_name_input"
        android:id="@+id/name_input"/>
    
    <LinearLayout android:layout_width="match_parent"
    	android:layout_height="60dp"
    	android:background="@color/top_bottom"
		android:gravity="center"
    	android:orientation="horizontal">
        <Button
            android:id="@+id/button_modify"
            android:layout_width="120dp"
            android:layout_height="40dip"
            android:textSize="18sp"
            android:background="@drawable/button_commit"
            android:text="@string/button_modify"
            android:textColor="@color/text_btn_commit_selector"/>
        <Button
            android:id="@+id/button_cancel"
            android:layout_width="120dp"
            android:layout_height="40dip"
            android:layout_marginLeft="60dip"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:text="@string/button_cancel"
            android:textColor="@color/text_selector" />
    </LinearLayout>
</LinearLayout>
