<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/top_bottom" >

        <Button
            android:id="@+id/button_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_login"
            android:textColor="@color/main_color"
            android:textSize="20dip" />

        <Button
            android:id="@+id/button_more"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_more_selector" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/button_more"
            android:background="@drawable/button_home" />
    </RelativeLayout>

    <!--
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dip"
        android:background="@color/top_bottom"
        android:gravity="center" >



        <Button
            android:id="@+id/button_commit"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/button_commit"
            android:text="@string/btn_confirm"
            android:textColor="@color/text_btn_commit_selector"
            android:textSize="15dip" />
    </LinearLayout>
    -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/White"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:background="@drawable/img_user_center_bg"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView_logo"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:background="@drawable/welcome_logo" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="热门餐厅不等位!"
                        android:textColor="@color/WhiteText"
                        android:textSize="16dip" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip" >

                <ImageView
                    android:id="@+id/imageView_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/img_user" />

                <EditText
                    android:id="@+id/EditText_uid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="30dip"
                    android:layout_toRightOf="@+id/imageView_uid"
                    android:background="@drawable/boder_bottom_maincolor"
                    android:text="@string/attention_username"
                    android:textColor="@color/textColor_gray"
                    android:singleLine="true"
                    android:textSize="14dip" 
                    android:inputType="number"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:paddingRight="20dip" >

                <ImageView
                    android:id="@+id/imageView_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/img_pwd" />
<!-- android:text="@string/attention_pwd" -->
                <EditText
                    android:id="@+id/EditText_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="30dip"
                    android:layout_toRightOf="@+id/imageView_pwd"
                    android:background="@drawable/boder_bottom_maincolor"
                    android:singleLine="true"
                    android:textColor="@color/textColor_gray"
                    android:inputType="text"
                    android:textSize="14dip"
                    android:text="密码:请输入密码" />
            </RelativeLayout>

            <Button
                android:id="@+id/button_login"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/button_commit"
                android:text="@string/login"
                android:textColor="@color/text_btn_commit_selector"
                android:textSize="15dip"
                android:layout_marginTop="20dip" />

            <Button
                android:id="@+id/button_regist"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@color/White"
                android:text="免费注册帐号"
                android:textColor="@color/main_color"
                android:textSize="15dip"
                android:layout_marginTop="10dip" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>