<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:gravity="center"
    android:padding="10dip"
    android:orientation="horizontal" >

    <RelativeLayout 
        android:layout_width="0dip"
        android:layout_weight="0.5"
        android:layout_marginLeft="10dip"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="望湘园"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/blk"/>
        <TextView android:id="@+id/title_price"
            android:layout_below="@+id/name"
            android:layout_marginTop="6dip"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/title_price"
            android:textColor="@color/blk"/>
        
        <TextView android:id="@+id/bill_price"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/title_price"
            android:layout_alignBaseline="@+id/title_price"
            android:layout_marginTop="6dip"
            android:layout_marginLeft="6dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="120.0"
            android:textSize="12sp"
            android:textColor="#ffff0000"/>
    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_marginLeft="4dip"
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_weight="0.5"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/bill_number"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textSize="12sp"
            android:gravity="right"
            android:text="订单号: dsadasdsadsadsads"
            android:textColor="@color/blk"/>
        <TextView android:id="@+id/bill_time"
            android:layout_marginTop="6dip"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textSize="12sp"
            android:gravity="right"
            android:text="消费时间: dsadsadsadsadsad"
            android:textColor="@color/blk"/>
    </LinearLayout>

</LinearLayout>