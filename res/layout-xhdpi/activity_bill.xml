<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/White"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/boder_bottom_xuxian"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="65dip"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_id"
                    android:textColor="@color/textColor_gray"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/textView_shopid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/no_data"
                    android:textColor="@color/textColor"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/boder_bottom_xuxian"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="65dip"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_name"
                    android:textColor="@color/textColor_gray"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/textView_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/no_data"
                    android:textColor="@color/textColor"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/boder_bottom_xuxian"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textView_title_timeinfo"
                    android:layout_width="65dip"
                    android:layout_height="wrap_content"
                    android:text="@string/time_info"
                    android:textColor="@color/textColor_gray"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/textView_timeinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/no_data"
                    android:textColor="@color/textColor"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/boder_bottom_xuxian"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="65dip"
                    android:layout_height="wrap_content"
                    android:text="@string/vip_seat"
                    android:textColor="@color/textColor_gray"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/textView_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/no_data"
                    android:textColor="@color/textColor"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/boder_bottom_xuxian"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="65dip"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_price"
                    android:textColor="@color/textColor_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/no_data"
                    android:textColor="@color/textColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView_money_describ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data"
                    android:textColor="@color/textColor_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_bottom_xuxian"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView_declaration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_infomation"
                        android:textColor="@color/main_color"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_infomation_remarks"
                        android:textColor="@color/main_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@color/light_gray"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="@string/pay_vital_tips_title"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:text="@string/pay_vital_tips"
                    android:textColor="@color/textColor"
                    android:textSize="10sp" />

            </LinearLayout>
            
             <RadioButton
	              android:id="@+id/radioButton_agree"
	              android:layout_width="wrap_content"
	              android:layout_gravity="right"
	              android:layout_height="wrap_content"
	              android:layout_marginRight="10dip"
	              android:layout_marginTop="10dip"
	              android:button="@drawable/radio_selector"
	              android:text="@string/agree_protocal_title"
	              android:textColor="@color/textColor"
	              android:checked="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认"
                        android:textColor="@color/textColor"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/checkBox_default"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/checkbox_selector"
                        android:button="@null" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="1dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_vertical"
                    android:background="@color/textColor_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="为他人定桌"
                        android:textColor="@color/textColor"
                        android:textSize="13dip" />

                    <CheckBox
                        android:id="@+id/checkBox_for_other"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/checkbox_selector"
                        android:button="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView_title_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="手机号码"
                    android:textColor="@color/textColor_gray"
                    android:textSize="13dip" />

                <EditText
                    android:id="@+id/editText_phone_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/editetext_selector"
                    android:ems="10" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="姓名"
                    android:textColor="@color/textColor_gray"
                    android:textSize="13dip" />

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/editetext_selector"
                    android:ems="10" >
                </EditText>

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:background="@drawable/radio_selector"
                        android:button="@null"
                        android:checked="true" />

                    <TextView
                        android:id="@+id/textView_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/male"
                        android:textColor="@color/textColor"
                        android:textSize="13dip" />

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/radio_selector"
                        android:button="@null" />

                    <TextView
                        android:id="@+id/textView_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/female"
                        android:textColor="@color/textColor"
                        android:textSize="13sp" />
                </RadioGroup>
            </LinearLayout>
            
            <LinearLayout
		        android:id="@+id/bottom"
		        android:layout_marginTop="30dip"
		        android:layout_width="fill_parent"
		        android:layout_height="50dip"
		        android:background="@color/top_bottom"
		        android:gravity="center" >
		
		        <Button
		            android:id="@+id/button_commit"
		            android:layout_width="fill_parent"
		            android:layout_height="30dip"
		            android:layout_marginLeft="20dip"
		            android:layout_marginRight="20dip"
		            android:background="@drawable/button_commit"
		            android:text="@string/btn_confirm"
		            android:textColor="@color/text_btn_commit_selector"
		            android:textSize="15sp" />
		    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>