<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边缘线的宽度和颜色 -->

    <stroke android:width="1px" android:color="@color/editetext_color" />

    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->

   <gradient  android:startColor="#ffffff" android:centerColor="#ffffff" android:endColor="#ffffff" android:angle="270"/> 

    <!-- 设置四个角的角度 -->

   <corners android:topLeftRadius="1dp" android:topRightRadius="1dp" android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp"/>

   <!-- 设置padding -->

   <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>

</shape>
