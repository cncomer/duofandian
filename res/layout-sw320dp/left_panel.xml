<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/leftmenu_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="20dip" >

            <ImageView
                android:id="@+id/avator"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:background="@drawable/photo_defult" />

             <LinearLayout android:id="@+id/guest_top_layout"
                 android:layout_marginLeft="10dip"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:clickable="true"
                 android:background="?attr/selectableItemBackground"
                 android:orientation="vertical" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/title_user"
                     android:textSize="20sp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:text="@string/title_login_to_get_services"
                     android:textSize="14sp" />
             </LinearLayout>
            <LinearLayout android:id="@+id/member_top_layout"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memberName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/memberLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/no_data"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/memberTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/no_data"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_boder"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/textColor2" />

    </LinearLayout>
        
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:scrollbars="none"
        android:fadingEdgeLength="0dp"
        android:fillViewport="true">
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <LinearLayout
	            android:id="@+id/item_seat"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="@dimen/left_panel_item_layout_margin_top"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/imageView_seat"
	                android:layout_width="24dip"
	                android:layout_height="22dip"
	                android:background="@drawable/icon_seat" />
	
	            <TextView
	                android:id="@+id/textView_seat"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="抢位"
	                android:textSize="14dip" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item_diancai"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="@dimen/left_panel_item_layout_margin_top"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/imageView_diancai"
	                android:layout_width="24dip"
	                android:layout_height="22dip"
	                android:background="@drawable/icon_diancai" />
	
	            <TextView
	                android:id="@+id/textView_diancai"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="点菜"
	                android:textSize="14dip" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item_myBill"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="@dimen/left_panel_item_layout_margin_top"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/imageView_myBill"
	                android:layout_width="24dip"
	                android:layout_height="17dip"
	                android:background="@drawable/icon_mybill" />
	
	            <TextView
	                android:id="@+id/textView_myBill"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="我的定单"
	                android:textSize="14dip" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item_myAccent"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="@dimen/left_panel_item_layout_margin_top"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/imageView_myAccent"
	                android:layout_width="24dip"
	                android:layout_height="24dip"
	                android:background="@drawable/icon_accent" />
	
	            <TextView
	                android:id="@+id/textView_myAccent"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="我的账户"
	                android:textSize="14dip" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item_qrcode"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="@dimen/left_panel_item_layout_margin_top"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/imageView_qrcode"
	                android:layout_width="24dip"
	                android:layout_height="17dip"
	                android:background="@drawable/icon_qrcode" />
	
	            <TextView
	                android:id="@+id/textView_qrcode"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="二维码买单"
	                android:textSize="14dip" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item_myscore"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="@dimen/left_panel_item_layout_margin_top"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/imageView_myscore"
	                android:layout_width="24dip"
	                android:layout_height="22dip"
	                android:background="@drawable/icon_jifen" />
	
	            <TextView
	                android:id="@+id/textView_myscore"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="我的积分"
	                android:textSize="14dip" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item_item_setting"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="@dimen/left_panel_item_layout_margin_top"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/imageView_setting"
	                android:layout_width="24dip"
	                android:layout_height="24dip"
	                android:background="@drawable/icon_setting" />
	
	            <TextView
	                android:id="@+id/textView_setting"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="设置"
	                android:textSize="14dip" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item_camera"
	            android:layout_width="152dip"
	            android:layout_height="38dip"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="40dp"
	            android:background="@drawable/camera_back"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:id="@+id/imageView_setting"
	                android:layout_width="24dip"
	                android:layout_height="17dip"
	                android:layout_marginLeft="20dip"
	                android:background="@drawable/icon_camera" />
	
	            <TextView
	                android:id="@+id/textView_setting"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="美食相机"
	                android:textSize="14dip" />
	        </LinearLayout>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>